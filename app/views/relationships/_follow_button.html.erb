<% if user_signed_in? %>
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <td><%= link_to "フォロワーを外す", user_relationships_path(user.id), method: :delete %></td>
    <% else %>
      <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
    <% end %>
  <% else %>
    <td></td>
  <% end %>
<% end %>